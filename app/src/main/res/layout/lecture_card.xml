<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/module_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="@string/module_name"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/batch_lecturer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/module_name"
            android:fontFamily="@font/poppins"
            android:text="@string/lecturer_name"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/batch_lecturer_name"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/start_time_end_time"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/batch_lecturer_name"
            android:layout_toEndOf="@id/duration"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="5dp"
            android:text="@string/l4_cr5"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/cancel_lecture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/module_name"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_delete_forever_24"
            android:visibility="visible" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>