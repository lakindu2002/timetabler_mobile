<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="20dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/module_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toStartOf="@id/more_admin_module"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="5dp"
            android:paddingBottom="5dp"
            android:text="@string/module_name"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/more_admin_module"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_baseline_more_vert_24"
            android:backgroundTint="@color/black" />

        <View
            android:id="@+id/ruler"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/module_title"
            android:background="@color/background" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/taught_by_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/module_title"
            android:fontFamily="@font/poppins"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="@string/lecturer_allocated"
            android:textColor="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/taught_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/module_title"
            android:layout_toEndOf="@id/taught_by_label"
            android:fontFamily="@font/poppins"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="@string/lecturer_name"
            android:textColor="@color/black" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/credit_count_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/taught_by_label"
            android:fontFamily="@font/poppins"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="@string/credit_count"
            android:textColor="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/credit_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/taught_by"
            android:layout_toEndOf="@id/credit_count_label"
            android:fontFamily="@font/poppins"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="@string/_30"
            android:textColor="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/independent_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/credit_count_label"
            android:fontFamily="@font/poppins"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="@string/independent_learning"
            android:textColor="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/independent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/credit_count"
            android:layout_toEndOf="@id/independent_label"
            android:fontFamily="@font/poppins"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="@string/_300_hours"
            android:textColor="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/contact_learning_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/independent_label"
            android:fontFamily="@font/poppins"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="@string/contact_learning"
            android:textColor="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/contact_learning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/independent"
            android:layout_toEndOf="@id/contact_learning_label"
            android:fontFamily="@font/poppins"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="@string/_50_hours"
            android:textColor="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/batch_count_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_learning_label"
            android:fontFamily="@font/poppins"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="@string/batches_enrolled_to_module"
            android:textColor="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/batch_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_learning_label"
            android:layout_toEndOf="@id/batch_count_label"
            android:fontFamily="@font/poppins"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="0"
            android:textColor="@color/black" />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>