<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="20dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/module_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/module_name"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/taught_by_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/module_title"
            android:fontFamily="@font/poppins"
            android:paddingTop="5dp"
            android:text="@string/taught_by"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/taught_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/module_title"
            android:layout_toEndOf="@id/taught_by_label"
            android:fontFamily="@font/poppins"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:text="@string/lecturer_name"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/de_assign_module_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/taught_by"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/btn_danger"
            android:fontFamily="@font/poppins_medium"
            android:text="De-Assign Module"
            android:textAllCaps="false"
            android:textSize="14sp" />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>