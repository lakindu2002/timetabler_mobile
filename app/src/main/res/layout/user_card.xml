<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@color/white"
    android:padding="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/more_options"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/username"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/more_options"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_baseline_more_vert_24"
            android:backgroundTint="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_marginTop="3dp"
            android:text="@string/full_name_header"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:id="@+id/ruler"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/full_name"
            android:layout_marginTop="5dp"
            android:background="@color/background" />

        <ImageView
            android:id="@+id/email_marker"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/ruler"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_baseline_alternate_email_24"
            android:backgroundTint="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/email_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ruler"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/email_marker"
            android:text="@string/email_address"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/call_marker"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/email_marker"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_baseline_call_24"
            android:backgroundTint="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/contact_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_address"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/call_marker"
            android:text="@string/contact"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/cake_marker"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/call_marker"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_cake"
            android:backgroundTint="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_number"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/member_since"
            android:layout_toEndOf="@id/cake_marker"
            android:text="@string/date_of_birth"
            android:textColor="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/member_since"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_number"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:text="@string/member_since"
            android:textColor="@color/black" />

        <View
            android:id="@+id/student_section"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/member_since"
            android:layout_marginTop="5dp"
            android:background="@color/background" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/batch_name_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_section"
            android:paddingTop="5dp"
            android:text="@string/batch_no_batch"
            android:textColor="@color/black" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>