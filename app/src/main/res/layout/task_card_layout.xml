<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@color/white"
    android:padding="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/more_options_task"
            android:fontFamily="@font/poppins_semibold"
            android:text="EEA-2 Assignment Code Refactor"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/more_options_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_baseline_more_vert_24"
            android:backgroundTint="@color/black"
            android:contentDescription="more button" />

        <View
            android:id="@+id/ruler"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/task_name"
            android:layout_marginTop="5dp"
            android:background="@color/background" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/task_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ruler"
            android:fontFamily="@font/poppins_semibold"
            android:paddingTop="10dp"
            android:text="25 December 2021 to 29 December 2021"
            android:textColor="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/task_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task_duration"
            android:layout_toStartOf="@id/created_at"
            android:paddingTop="10dp"
            android:text="Status: Completed"
            android:textColor="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task_duration"
            android:layout_alignParentEnd="true"
            android:paddingTop="10dp"
            android:text="Created: 25 December 2021"
            android:textColor="@color/black" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>