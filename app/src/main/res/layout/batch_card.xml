<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@color/white"
    android:padding="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/batch_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/more_options_batch"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/batch_code"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/more_options_batch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_baseline_more_vert_24"
            android:backgroundTint="@color/black"
            android:contentDescription="more button" />

        <View
            android:id="@+id/ruler"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/batch_code"
            android:layout_marginTop="5dp"
            android:background="@color/background" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/batch_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ruler"
            android:paddingTop="5dp"
            android:text="Name: Software Engineering"
            android:textColor="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/modules_enrolled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/batch_name"
            android:layout_toStartOf="@+id/students_enrolled"
            android:text="Modules Enrolled: 5"
            android:textColor="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/students_enrolled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/batch_name"
            android:layout_alignParentEnd="true"
            android:text="Students Enrolled: 10"
            android:textColor="@color/black" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>